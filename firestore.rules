rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to get the role of the requesting user from their profile
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Users Collection:
    match /users/{userId} {
      // READ: An admin can read any profile. A user can only read their own.
      allow read: if request.auth != null && 
                    (request.auth.uid == userId || getUserRole(request.auth.uid) == 'admin');
      
      // CREATE: A user can create their own profile during signup.
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;

      // UPDATE: A user can update their own profile, but with restrictions.
      allow update: if request.auth != null && (
        // Condition 1: An admin can update user data (e.g., for role or status changes).
        getUserRole(request.auth.uid) == 'admin'
        ||
        // Condition 2: A user can update their own non-sensitive profile information.
        // They are not allowed to change their role or their covidStatus via this path.
        (
            request.auth.uid == userId &&
            request.resource.data.role == resource.data.role &&
            request.resource.data.covidStatus == resource.data.covidStatus
        )
        ||
        // Condition 3: A user can report themselves as 'positive'.
        // This is a one-way change from 'negative' or null to 'positive'.
        (
            request.auth.uid == userId &&
            (resource.data.covidStatus == null || resource.data.covidStatus == 'negative') &&
            request.resource.data.covidStatus == 'positive' &&
            // Ensure no other fields are being maliciously updated at the same time.
            request.resource.data.role == resource.data.role
        )
      );

      // DELETE: No one can delete user profiles from the client.
      allow delete: if false;
    }

    // Bookings Collection:
    match /bookings/{bookingId} {
      // READ: Admin, or the client/provider involved in the booking.
      allow read: if request.auth != null &&
                   (getUserRole(request.auth.uid) == 'admin' ||
                    resource.data.clientId == request.auth.uid ||
                    resource.data.providerId == request.auth.uid);

      // CREATE: Only authenticated 'user' role can create a booking for themselves.
      allow create: if request.auth != null &&
                     getUserRole(request.auth.uid) == 'user' &&
                     request.resource.data.clientId == request.auth.uid;

      // UPDATE: Admin, or the client/provider involved can update (e.g., change status).
      allow update: if request.auth != null &&
                     (getUserRole(request.auth.uid) == 'admin' ||
                      resource.data.clientId == request.auth.uid ||
                      resource.data.providerId == request.auth.uid);
      
      allow delete: if false;
    }

    // Exposures Collection (for contact tracing):
    match /exposures/{userId} {
        // READ: Only the exposed user or an admin can read the document.
        allow read: if request.auth != null && 
                     (request.auth.uid == userId || getUserRole(request.auth.uid) == 'admin');
        
        // CREATE, UPDATE, DELETE: Only an admin can manage exposure records.
        allow create, update, delete: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
    }

    // Exposure Reports (for admin review):
    match /exposure_reports/{reportId} {
        // CREATE: A provider can create a report for themselves.
        allow create: if request.auth != null && request.resource.data.providerId == request.auth.uid;
        // READ, UPDATE: Only admins can read reports and update their status.
        allow read, update: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
        allow delete: if false;
    }

    // Audit Logs Collection (for R7):
    match /audit_logs/{logId} {
        // CREATE: Any authenticated user can create a log entry for their own actions.
        allow create: if request.auth != null;

        // READ, UPDATE, DELETE: Only admins can read or modify the audit trail.
        allow read, update, delete: if request.auth != null &&
                                     getUserRole(request.auth.uid) == 'admin';
    }
  }
}
